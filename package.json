{
  "name": "lightscript-workshop",
  "version": "0.9.0",
  "description": "Modern framework for creating RGB lighting effects for SignalRGB",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "dev:with-effect": "EFFECT=your-effect-id vite",
    "build": "node scripts/build.js",
    "build:debug": "NO_MINIFY=true node scripts/build.js",
    "build:single": "tsc && vite build",
    "preview": "vite preview",
    "format": "prettier --write \"src/**/*.{ts,js,html,css}\" \"tests/**/*.{ts,js}\"",
    "format:check": "prettier --check \"src/**/*.{ts,js,html,css}\" \"tests/**/*.{ts,js}\"",
    "lint": "eslint src tests --ext ts,js --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint src tests --ext ts,js --fix",
    "typecheck": "tsc --noEmit",
    "prepare-release": "npm run format && npm run lint:fix && npm run build",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage"
  },
  "keywords": [
    "webgl",
    "shader",
    "signalrgb",
    "lightscript",
    "threejs",
    "rgb",
    "lighting",
    "effects",
    "typescript"
  ],
  "author": "Stefanie Jane <stef@hyperbliss.tech>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/hyperb1iss/lightscript-workshop"
  },
  "homepage": "https://github.com/hyperb1iss/lightscript-workshop",
  "bugs": {
    "url": "https://github.com/hyperb1iss/lightscript-workshop/issues"
  },
  "devDependencies": {
    "@preact/preset-vite": "^2.10.1",
    "@types/node": "^22.13.14",
    "@types/three": "^0.175.0",
    "@typescript-eslint/eslint-plugin": "^8.29.0",
    "@typescript-eslint/parser": "^8.29.0",
    "@vitejs/plugin-react-swc": "^3.8.1",
    "@vitest/coverage-v8": "^3.1.1",
    "canvas": "^3.1.0",
    "eslint": "^9.23.0",
    "jsdom": "^26.0.0",
    "prettier": "^3.5.3",
    "prettier-plugin-uppercase-doctype": "^1.0.0",
    "terser": "^5.39.0",
    "typescript": "5.8.2",
    "vite": "^6.2.0",
    "vite-plugin-eslint": "^1.8.1",
    "vite-plugin-glsl": "^1.4.0",
    "vitest": "^3.1.1"
  },
  "dependencies": {
    "preact": "^10.26.4",
    "reflect-metadata": "^0.2.2",
    "three": "^0.175.0"
  },
  "engines": {
    "node": ">=16.0.0"
  }
}
